<div class="container-content">
    <h2>Edit your book: </h2>

    <form action="" method="post" class="container-content-form">
        <input type="hidden" name="id" value="{{this.id}}">
        <label for="date">Date:</label>
        <input type="text" name="date" value="{{this.date}}">
        <label for="title">Title:</label>
        <input type="text" name="title" value="{{this.title}}">
        <label for="author">Author:</label>
        <input type="text" name="author" value="{{this.author}}">
        <label for="category">Category:</label>
        <input type="text" name="category" value="{{this.category}}">
        <label for="country">Country:</label>
        <input type="text" name="country" value="{{this.country}}">
        <label for="description">Description:</label>
        <textarea name="description" id="description">{{this.description}}</textarea>
    
        <input type="submit" name="btn-send">
    </form>
</div>